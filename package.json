{
  "name": "pdf-parser",
  "version": "1.0.0",
  "description": "Convert pdf files to WD formats",
  "main": "src/index.js",
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WriterDuetTeam/pdf-parser.git"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "dev:5000": "PORT=5000 nodemon src/index.js",
    "docker:bash": "npm run docker:exec -- /bin/bash",
    "docker:build": "docker build . -t wd/pdf-parser",
    "docker:dev": "npm run docker:build && docker run -p 8080:8080 --name parser -e IS_LOCAL=true -d wd/pdf-parser",
    "docker:exec": "docker exec -it parser",
    "docker:logs": "docker logs -f parser",
    "docker:parse:fountain": "php src/parser/analyzer/TestParser.php --fountain pdftohtml=pdftohtml",
    "docker:rebuild": "npm run docker:shutdown && npm run docker:dev",
    "docker:rm": "docker rm parser",
    "docker:run": "docker run -p 8080:8080 --name parser -d wd/pdf-parser",
    "docker:shutdown": "npm run docker:stop && npm run docker:rm",
    "docker:start": "npm run docker:build && npm run docker:run",
    "docker:stop": "docker stop parser",
    "gcloud:dev": "gcloud beta code dev",
    "local:parse:shakespeare": "php src/parser/analyzer/TestParser.php --json hamlet.shakespeare",
    "local:parse:example": "php src/parser/analyzer/TestParser.php -X1707 pdftohtml=/usr/local/bin/pdftohtml example.pdf",
    "local:parse:fountain": "php src/parser/analyzer/TestParser.php --fountain pdftohtml=/usr/local/bin/pdftohtml",
    "local:parse:fountain:example": "php src/parser/analyzer/TestParser.php --fountain pdftohtml=/usr/local/bin/pdftohtml example.pdf",
    "local:parse:json:example": "php src/parser/analyzer/TestParser.php --json pdftohtml=/usr/local/bin/pdftohtml example.pdf",
    "parse": "php src/parser/analyzer/TestParser.php",
    "start": "node src/index.js",
    "test:load": "node tests/load.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "multer": "^1.4.3",
    "puppeteer": "^11.0.0",
    "puppeteer-cluster": "^0.22.0",
    "randomstring": "^1.2.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1"
  }
}
